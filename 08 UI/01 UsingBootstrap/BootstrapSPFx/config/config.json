{
  "$schema": "https://developer.microsoft.com/json-schemas/spfx-build/config.2.0.schema.json",
  "version": "2.0",
  "bundles": {
    "bootstrap-wp-web-part": {
      "components": [
        {
          "entrypoint": "./lib/webparts/bootstrapWp/BootstrapWpWebPart.js",
          "manifest": "./src/webparts/bootstrapWp/BootstrapWpWebPart.manifest.json"
        }
      ]
    }
  },
  "externals": {
    "jquery": {
      "path": "node_modules/jquery/dist/jquery.min.js",
      "globalName": "jquery"
    },
    "bootstrap": {
      "path": "node_modules/bootstrap/dist/js/bootstrap.min.js",
      "globalName": "bootstrap"
    }
  },
  "localizedResources": {
    "BootstrapWpWebPartStrings": "lib/webparts/bootstrapWp/loc/{locale}.js"
  }
}
